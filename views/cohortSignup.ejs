<% include partials/head %>

<div class="ui container" id="">
    <% if(errors) { %>
      <% errors.forEach(function(err) { %>
        <div class="ui warning message">
          <i class="close icon"></i>
         <div class="header">
          <%= error.msg %>
         </div>
        </div>
      <%  }) %>
    <%  } %>

  <div class="ui container mainForm">
    <div class="ui huge header">Register</div>  
    <form class="ui form" action="/users/register" method="POST" enctype="multipart/form-data">
    <div class="field">
      <label>Name</label>
      <input type="text" name="name" value="" placeholder="Name">
    </div>
    <div class="field">
      <label>Email</label>
      <input type="email" name="email" value="" placeholder="Email">
    </div>
    <div class="field">
      <label>Username</label>
      <input type="text" name="username" value="" placeholder="Username">
    </div>
    <div class="field">
      <label>Password</label>
      <input type="password" name="password" value=""placeholder="Password">
    </div>
    <div class="field">
      <label>Confirm Password</label>
      <input type="password" name="password2" value="" placeholder="Password">
    </div>
    <div class="field">
      <label>Current Occupation</label>
      <input type="text" name="userRef[currentOccupation]"  placeholder="Current Occupation">
    </div>
    <div class="field">
      <label>Description</label>
      <input type="text" name="userRef[description]" placeholder="Description">
    </div>
    <div class="field">
      <label>Avatar</label>
      <input type="file" name="imageRef" placeholder="Image of You">
    </div>
    <button class="ui button" type="submit">Submit</button>
    <a href="/" class="ui button">Cancel</a>
   </form>
  </div>
</div>


<% include partials/foot %>
