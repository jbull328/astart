<% include partials/head %>

<div class="ui container" id="">

  <div class="ui container mainForm">
    <div class="ui huge header">Get a Quote</div>
    <form class="ui form" action="/requestInfo/" method="POST" enctype="multipart/form-data">
    <div class="field">
      <label>First Name</label>
      <input type="text" name="customerfName"  placeholder="First Name">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input type="text" name="customerlName"  placeholder="Last Name">
    </div>
    <div class="field">
      <label>Company Name</label>
      <input type="text" name="companyName" placeholder="Company Name">
    </div>
    <div class="field">
      <label>Description</label>
      <input type="text" name="projectDescription" placeholder="Description">
    </div>
    <div class="field">
        <label>Project Type</label>
        <div class="ui fluid search selection dropdown">
            <input type="hidden" name="projectType" placeholder="Project Type">
            <i class="dropdown icon"></i>
        </div>
    </div>
    <div class="field">
      <label>Email</label>    
      <input type="email" name="customerEmail" placeholder="Email">
    </div>
    <div class="field">
        <label>Phone</label>
        <input class="phone" type="phone" name="phone" placeholder="phone">
    </div>
    <button class="ui button" type="submit">Submit</button>
    <a href="/" class="ui button">Cancel</a>
   </form>

  </div>
</div>


<% include partials/foot %>