<!DOCTYPE html>
<html>
  <head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.9/semantic.min.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.9/semantic.min.js"></script>
    <link href="/styles/app.css" rel="stylesheet"/>
    <meta charset="utf-8">
    <title>Central Valley Developers</title>
  </head>
  <body>
    <div class="ui fixed inverted menu">
            <div class="ui container">
                <div class="header item"><i class="ui icon users"></i>FreeCodeCamp of Modesto</div>
                <a href="/" class="item">Home</a>
                <a href="/users/login" class="item">Login-Sign Up</a>
                <a href="/showAll" class="item">Developers</a>
                <a href="/users/details/<%=userRef._id%>" class="item">My Account</a>             
                <form  method="POST" action="/logout">
                  <button class="ui button item" type="submit"><a class="item">Logout</a></button>
                </form>

            </div>
    </div>

<div class="row">
  <div class="ui three column stacking grid container" id="allUsersMain">
      <% userRef.forEach(function(userRef) { %>
            <div class="column">
            <a href="/showUser/<%= userRef._id %>">
              <div class="ui fluid card">
                <div class="ui image">
                  <img class="avatarImg" src="<%= userRef.imageRef %>" width="350" height="200">
                </div>
                <div class="content">
                  <div class="header"><%= userRef.name %></div>
                  <div class="description">
                    <p><%= userRef.currentOccupation %></p>
                  </div>
                </div>
              </div>
            </a>
            </div>


      <% }) %>
  </div>
</div>


<% include partials/foot %>
