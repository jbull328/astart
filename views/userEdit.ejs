<% include partials/head %>

<div class="ui container" id="">

  <div class="ui container mainForm">
    <div class="ui huge header">Edit your profile</div>
    <form class="ui form" action="/userEdit/<%= userRef.id %>? method=PUT " method="POST" enctype="multipart/form-data">
    <div class="field">
      <label>First Name</label>
      <input type="text" name="user[fName]" value="<%= user.givenName %>" placeholder="First Name">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input type="text" name="user[lName]" value="<%= user.surname %>" placeholder="Last Name">
    </div>
    <div class="field">
      <label>Current Occupation</label>
      <input type="text" name="user[currentOccupation]" placeholder="Current Occupation">
    </div>
    <div class="field">
      <label>Description</label>
      <input type="text" name="user[description]" placeholder="Description">
    </div>
    <div class="field">
      <label>Email</label>
      <input type="email" name="user[userEmail]" value="<%=user.email %>" placeholder="Email">
    </div>
    <div class="field">
      <label>Avatar</label>
      <input type="file" name="user[avatar]" placeholder="Image of You">
    </div>
    <button class="ui button" type="submit">Submit</button>
    <a href="/" class="ui button">Cancel</a>
   </form>

  </div>
</div>


<% include partials/foot %>
